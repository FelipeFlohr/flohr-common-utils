{
    "name": "flohr-common-utils",
    "version": "1.0.0",
    "description": "Utility classes for use in personal projects",
    "main": "dist/index.js",
    "private": true,
    "module": "true",
    "scripts": {
        "test": "jest",
        "compile": "tsc",
        "lint": "eslint --fix --ignore-path .gitignore --ext .js,.ts .",
        "doc:generate": "typedoc --out docs lib/index.ts"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/FelipeFlohr/flohr-common-utils.git"
    },
    "keywords": [
        "utils",
        "node",
        "web"
    ],
    "author": "Felipe Matheus Flohr",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/FelipeFlohr/flohr-common-utils/issues"
    },
    "homepage": "https://github.com/FelipeFlohr/flohr-common-utils#readme",
    "devDependencies": {
        "@types/eslint": "^8.21.1",
        "@types/jest": "^29.4.0",
        "@types/node": "^18.14.1",
        "@typescript-eslint/eslint-plugin": "^5.53.0",
        "@typescript-eslint/parser": "^5.53.0",
        "eslint": "^8.34.0",
        "eslint-config-standard": "^17.0.0",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-n": "^15.6.1",
        "eslint-plugin-promise": "^6.1.1",
        "eslint-plugin-react": "^7.32.2",
        "jest": "^29.4.3",
        "ts-jest": "^29.0.5",
        "typedoc": "^0.23.25",
        "typescript": "^4.9.5"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "testPathIgnorePatterns": [
            "/node_modules/",
            "/dist/"
        ],
        "transform": {
            "node_modules/variables/.+\\.(j|t)sx?$": "ts-jest"
        },
        "transformIgnorePatterns": [
            "node_modules/(?!variables/.*)"
        ]
    }
}
